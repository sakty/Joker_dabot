from telegram import Update, Bot
from telegram.ext import CommandHandler
import subprocess
from tg_bot import dispatcher


def gugle(bot: Bot, update: Update):
        query = update.effective_message.text.split(None, 1)
        result_ = subprocess.run(['gsearch', query], stdout=subprocess.PIPE)
        result = str(result_.stdout.decode())
        update.effective_message.reply_markdown('*Searching:*\n`' + query + '`\n\n*RESULTS:*\n' + result)


go = CommandHandler("google", gugle)
dispatcher.add_handler(go)
